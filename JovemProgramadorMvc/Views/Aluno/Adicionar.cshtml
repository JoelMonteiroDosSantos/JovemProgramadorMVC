@model AlunoModel

@if (TempData["Mensagem"] != null)
{
<div class="alert-danger">
    @TempData["Mensagem"]
</div>}

<form asp-controller="Aluno" asp-action="Inserir" method="post">
    <div class="text-left">

        <div>
            <h1>Registro de Novo Aluno</h1>
        </div>

        <form>
            <div class="mb-3">
                <label for="exampleInputNome1" class="form-label">Nome do Aluno</label>
                <input type="text" asp-for="Nome" class="form-control col-5" required />
            </div>
            <div class="mb-3">
                <label for="exampleInputIdade1" class="form-label">Idade</label>
                <input type="number" asp-for="Idade" class="form-control col-1" />
            </div>
            <div class="mb-3">
                <label for="exampleInputContato1" class="form-label">Contato</label>
                <input type="text" asp-for="Contato" class="form-control col-3" placeholder="(00) 00000-0000" />
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input type="email" asp-for="Email" class="form-control col-3" placeholder="emailexemplo@gmail.com" />
            </div>
            <div class="mb-3">
                <label for="exampleInputCEP1" class="form-label">CEP</label>
                <input type="text" asp-for="Cep" class="form-control col-3" placeholder="00000000" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary col-1" role="button">Adicionar</button>
                <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</form>
